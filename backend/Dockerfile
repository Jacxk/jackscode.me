###########
# Builder #
###########
FROM node:12.14-alpine AS builder

WORKDIR /usr/src

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy source
COPY . .

# Build source
RUN npm run build

#########
# Image #
#########
FROM node:12.14-alpine

WORKDIR /usr/src

# Set and expose port
ARG BE_PORT
EXPOSE $BE_PORT

# Install dependencies
COPY package*.json ./
RUN npm ci --production

# Copy dist
COPY --from=builder /usr/src/dist dist

CMD ["yarn", "start"]
